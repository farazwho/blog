<%- include('partials/header') %>

  <h1>Compose</h1>
  <form action="/compose" method="post">

    <div class="form-group">
      <label for="blogTitle">Title</label>

      <input id="blogTitle" class="form-control" type="text" name="postTitle" placeholder="Enter Title" autofocus
        required autocomplete="off">
    </div>

    <div class="form-group">
      <label for="blogContent">Post</label>

      <textarea id="blogContent" class="form-control" type="text" name="postContent" placeholder="Write here..."
        required autocomplete="off" rows="4"></textarea>
    </div>

    <button type="submit" name="compose" class="btn btn-primary">Publish</button>
  </form>

  <%- include('partials/footer') %>